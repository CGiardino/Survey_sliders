    function addstep(st,legend){
        $('#formElem').append('<fieldset class="step" id="step'+st+'">')
        $('#step'+st).append('<legend>'+legend+'</legend>');
        $('#steps').css("height", "50px");
        if(st==0){
            $('#nvList').append('<li class="selected"><a href="#">'+legend+'</a></li>');
            $('#navigation').hide().fadeIn(3500);


        }
        else{
            $('#nvList').append('<li><a href="#">'+legend+'</a></li>');




        }
    }
    function addgroup(step,z,n, title, ext1, ext2){
        cGroup=z;

        for( var i=0;i<n;i++){

                var item=$('<div class="group" id="g'+z+'"><img class="cross" src="../images/cross.png" onclick="del(this);"><h3 class="tt">'+title+'</h3><span class="ext i">'+ext1+'</span><div class="sld"><img src="../images/lines.png" class="lines"><div id="sgi'+z+'"><input type="range" name="test" min="-5" max="5" value="0" step="1"></div><img src="../images/lines.png" class="lines"><div class="uno"><div id="sgf'+z+'"><input type="range" name="test" min="-5" max="5" value="0" step="1"></div></div></div><span class="ext f">'+ext2+'</span><div id="arrows"><img src="../images/arrow0.png" onclick="change(this)" class="arrow"><img src="../images/arrow1.png" onclick="change(this)" class="arrow"><img src="../images/arrow2.png" onclick="change(this)" class="arrow"></div></div>').hide().fadeIn(2000);
                $('#step'+step).append(item);
                $(".group #sgi"+z+" :range").rangeinput();

                $(".group .uno #sgf"+z+" :range").rangeinput();

                upFoot();

        }

        $('#steps').css("height", $('#steps').height()+230 +"px");
    }


